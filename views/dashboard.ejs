<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AI Madness - Multi-AI Dashboard</title>
    <link rel="stylesheet" href="/styles/styles.css">
</head>
<body>
    <div class="dashboard">
        <!-- Sidebar -->
        <div class="sidebar" id="sidebar">
            <div class="sidebar-content">
                <!-- Logo -->
                <div class="sidebar-header">
                    <div class="logo">
                        <div class="logo-icon">
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <polygon points="13,2 3,14 12,14 11,22 21,10 12,10 13,2"></polygon>
                            </svg>
                        </div>
                        <h1>AI <span class="brand">Madness</span></h1>
                    </div>
                    <button class="close-sidebar" id="closeSidebar">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <line x1="18" y1="6" x2="6" y2="18"></line>
                            <line x1="6" y1="6" x2="18" y2="18"></line>
                        </svg>
                    </button>
                </div>

                <!-- New Chat Button -->
                <button class="new-chat-btn">
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <line x1="12" y1="5" x2="12" y2="19"></line>
                        <line x1="5" y1="12" x2="19" y2="12"></line>
                    </svg>
                    New Chat
                </button>

                <!-- Chat History -->
                <div class="chat-history">
                    <h3>Recent Chats</h3>
                    <div class="chat-item">
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"></path>
                        </svg>
                        <span>AI Model Comparison</span>
                    </div>
                    <div class="chat-item">
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"></path>
                        </svg>
                        <span>Code Generation Task</span>
                    </div>
                    <div class="chat-item">
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"></path>
                        </svg>
                        <span>Creative Writing</span>
                    </div>
                </div>

                <!-- Plan Info -->
                <div class="plan-card">
                    <div class="plan-header">
                        <span>Free Plan</span>
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M6 9H4.5a2.5 2.5 0 0 1 0-5H6"></path>
                            <path d="M18 9h1.5a2.5 2.5 0 0 0 0-5H18"></path>
                            <path d="M4 22h16"></path>
                            <path d="M10 14.66V17c0 .55-.47.98-.97 1.21C7.85 18.75 7 20.24 7 22"></path>
                            <path d="M14 14.66V17c0 .55.47.98.97 1.21C16.15 18.75 17 20.24 17 22"></path>
                            <path d="M18 2H6v7a6 6 0 0 0 12 0V2Z"></path>
                        </svg>
                    </div>
                    <div class="progress-bar">
                        <div class="progress-fill" style="width: 75%"></div>
                    </div>
                    <p class="usage-text">75/100 queries used</p>
                    <button class="upgrade-btn">Upgrade to Pro</button>
                </div>

                <!-- Settings -->
                <button class="settings-btn">
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <circle cx="12" cy="12" r="3"></circle>
                        <path d="M19.4 15a1.65 1.65 0 0 0 .33 1.82l.06.06a2 2 0 0 1 0 2.83 2 2 0 0 1-2.83 0l-.06-.06a1.65 1.65 0 0 0-1.82-.33 1.65 1.65 0 0 0-1 1.51V21a2 2 0 0 1-2 2 2 2 0 0 1-2-2v-.09A1.65 1.65 0 0 0 9 19.4a1.65 1.65 0 0 0-1.82.33l-.06.06a2 2 0 0 1-2.83 0 2 2 0 0 1 0-2.83l.06-.06a1.65 1.65 0 0 0 .33-1.82 1.65 1.65 0 0 0-1.51-1H3a2 2 0 0 1-2-2 2 2 0 0 1 2-2h.09A1.65 1.65 0 0 0 4.6 9a1.65 1.65 0 0 0-.33-1.82l-.06-.06a2 2 0 0 1 0-2.83 2 2 0 0 1 2.83 0l.06.06a1.65 1.65 0 0 0 1.82.33H9a1.65 1.65 0 0 0 1 1.51V3a2 2 0 0 1 2-2 2 2 0 0 1 2 2v.09a1.65 1.65 0 0 0 1 1.51 1.65 1.65 0 0 0 1.82-.33l.06-.06a2 2 0 0 1 2.83 0 2 2 0 0 1 0 2.83l-.06.06a1.65 1.65 0 0 0-.33 1.82V9a1.65 1.65 0 0 0 1.51 1H21a2 2 0 0 1 2 2 2 2 0 0 1-2 2h-.09a1.65 1.65 0 0 0-1.51 1z"></path>
                    </svg>
                    Settings
                </button>
            </div>
        </div>

        <!-- Main Content -->
        <div class="main-content">
            <!-- Top Bar -->
            <header class="top-bar">
                <div class="top-bar-left">
                    <button class="menu-btn" id="menuBtn">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <line x1="3" y1="6" x2="21" y2="6"></line>
                            <line x1="3" y1="12" x2="21" y2="12"></line>
                            <line x1="3" y1="18" x2="21" y2="18"></line>
                        </svg>
                    </button>
                    <h2>Multi-AI Dashboard</h2>
                </div>
                <div class="user-avatar">AM</div>
            </header>

            <!-- AI Panels Grid -->
            <div class="panels-container">
                <div class="panels-grid" id="panelsGrid">
                    <!-- ChatGPT Panel -->
                    <div class="ai-panel" data-model="chatgpt">
                        <div class="panel-header">
                            <div class="panel-title">
                                <h3>ChatGPT</h3>
                                <label class="switch">
                                    <input type="checkbox" checked data-model="chatgpt">
                                    <span class="slider"></span>
                                </label>
                            </div>
                            <button class="expand-btn" data-model="chatgpt">Expand</button>
                        </div>
                        <div class="panel-body">
                            <div class="empty-state">
                                <p>Ready to generate response...</p>
                            </div>
                        </div>
                        <div class="panel-footer">
                            <div class="action-buttons">
                                <button class="action-btn">
                                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <path d="M7 10v12"></path>
                                        <path d="M15 5.88 14 10h5.83a2 2 0 0 1 1.92 2.56l-2.33 8A2 2 0 0 1 17.5 22H4a2 2 0 0 1-2-2v-8a2 2 0 0 1 2-2h2.76a2 2 0 0 0 1.79-1.11L12 2h0a3.13 3.13 0 0 1 3 3.88Z"></path>
                                    </svg>
                                </button>
                                <button class="action-btn">
                                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <path d="M17 14v6m-3-3h6"></path>
                                        <path d="M6 15.45v-3.9a3.3 3.3 0 0 1 5.4-2.53l1.2 1.08"></path>
                                        <path d="M13 20a5 5 0 0 0 5-5V9a5 5 0 0 0-5-5H7a5 5 0 0 0-5 5v6a5 5 0 0 0 5 5z"></path>
                                    </svg>
                                </button>
                                <button class="action-btn">
                                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <path d="M4 12v8a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2v-8"></path>
                                        <polyline points="16,6 12,2 8,6"></polyline>
                                        <line x1="12" y1="2" x2="12" y2="15"></line>
                                    </svg>
                                </button>
                            </div>
                            <span class="status">Ready</span>
                        </div>
                    </div>

                    <!-- Claude Panel -->
                    <div class="ai-panel" data-model="claude">
                        <div class="panel-header">
                            <div class="panel-title">
                                <h3>Claude</h3>
                                <label class="switch">
                                    <input type="checkbox" checked data-model="claude">
                                    <span class="slider"></span>
                                </label>
                            </div>
                            <button class="expand-btn" data-model="claude">Expand</button>
                        </div>
                        <div class="panel-body">
                            <div class="empty-state">
                                <p>Ready to generate response...</p>
                            </div>
                        </div>
                        <div class="panel-footer">
                            <div class="action-buttons">
                                <button class="action-btn">
                                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <path d="M7 10v12"></path>
                                        <path d="M15 5.88 14 10h5.83a2 2 0 0 1 1.92 2.56l-2.33 8A2 2 0 0 1 17.5 22H4a2 2 0 0 1-2-2v-8a2 2 0 0 1 2-2h2.76a2 2 0 0 0 1.79-1.11L12 2h0a3.13 3.13 0 0 1 3 3.88Z"></path>
                                    </svg>
                                </button>
                                <button class="action-btn">
                                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <path d="M17 14v6m-3-3h6"></path>
                                        <path d="M6 15.45v-3.9a3.3 3.3 0 0 1 5.4-2.53l1.2 1.08"></path>
                                        <path d="M13 20a5 5 0 0 0 5-5V9a5 5 0 0 0-5-5H7a5 5 0 0 0-5 5v6a5 5 0 0 0 5 5z"></path>
                                    </svg>
                                </button>
                                <button class="action-btn">
                                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <path d="M4 12v8a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2v-8"></path>
                                        <polyline points="16,6 12,2 8,6"></polyline>
                                        <line x1="12" y1="2" x2="12" y2="15"></line>
                                    </svg>
                                </button>
                            </div>
                            <span class="status">Ready</span>
                        </div>
                    </div>

                    <!-- Gemini Panel -->
                    <div class="ai-panel" data-model="gemini">
                        <div class="panel-header">
                            <div class="panel-title">
                                <h3>Gemini</h3>
                                <label class="switch">
                                    <input type="checkbox" checked data-model="gemini">
                                    <span class="slider"></span>
                                </label>
                            </div>
                            <button class="expand-btn" data-model="gemini">Expand</button>
                        </div>
                        <div class="panel-body">
                            <div class="empty-state">
                                <p>Ready to generate response...</p>
                            </div>
                        </div>
                        <div class="panel-footer">
                            <div class="action-buttons">
                                <button class="action-btn">
                                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <path d="M7 10v12"></path>
                                        <path d="M15 5.88 14 10h5.83a2 2 0 0 1 1.92 2.56l-2.33 8A2 2 0 0 1 17.5 22H4a2 2 0 0 1-2-2v-8a2 2 0 0 1 2-2h2.76a2 2 0 0 0 1.79-1.11L12 2h0a3.13 3.13 0 0 1 3 3.88Z"></path>
                                    </svg>
                                </button>
                                <button class="action-btn">
                                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <path d="M17 14v6m-3-3h6"></path>
                                        <path d="M6 15.45v-3.9a3.3 3.3 0 0 1 5.4-2.53l1.2 1.08"></path>
                                        <path d="M13 20a5 5 0 0 0 5-5V9a5 5 0 0 0-5-5H7a5 5 0 0 0-5 5v6a5 5 0 0 0 5 5z"></path>
                                    </svg>
                                </button>
                                <button class="action-btn">
                                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <path d="M4 12v8a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2v-8"></path>
                                        <polyline points="16,6 12,2 8,6"></polyline>
                                        <line x1="12" y1="2" x2="12" y2="15"></line>
                                    </svg>
                                </button>
                            </div>
                            <span class="status">Ready</span>
                        </div>
                    </div>

                    <!-- Perplexity Panel -->
                    <div class="ai-panel disabled" data-model="perplexity">
                        <div class="panel-header">
                            <div class="panel-title">
                                <h3>Perplexity</h3>
                                <label class="switch">
                                    <input type="checkbox" data-model="perplexity">
                                    <span class="slider"></span>
                                </label>
                            </div>
                            <button class="expand-btn" data-model="perplexity">Expand</button>
                        </div>
                        <div class="panel-body">
                            <div class="empty-state">
                                <p>Ready to generate response...</p>
                            </div>
                        </div>
                        <div class="panel-footer">
                            <div class="action-buttons">
                                <button class="action-btn">
                                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <path d="M7 10v12"></path>
                                        <path d="M15 5.88 14 10h5.83a2 2 0 0 1 1.92 2.56l-2.33 8A2 2 0 0 1 17.5 22H4a2 2 0 0 1-2-2v-8a2 2 0 0 1 2-2h2.76a2 2 0 0 0 1.79-1.11L12 2h0a3.13 3.13 0 0 1 3 3.88Z"></path>
                                    </svg>
                                </button>
                                <button class="action-btn">
                                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <path d="M17 14v6m-3-3h6"></path>
                                        <path d="M6 15.45v-3.9a3.3 3.3 0 0 1 5.4-2.53l1.2 1.08"></path>
                                        <path d="M13 20a5 5 0 0 0 5-5V9a5 5 0 0 0-5-5H7a5 5 0 0 0-5 5v6a5 5 0 0 0 5 5z"></path>
                                    </svg>
                                </button>
                                <button class="action-btn">
                                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <path d="M4 12v8a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2v-8"></path>
                                        <polyline points="16,6 12,2 8,6"></polyline>
                                        <line x1="12" y1="2" x2="12" y2="15"></line>
                                    </svg>
                                </button>
                            </div>
                            <span class="status">Ready</span>
                        </div>
                    </div>

                    <!-- DeepSeek Panel -->
                    <div class="ai-panel disabled" data-model="deepseek">
                        <div class="panel-header">
                            <div class="panel-title">
                                <h3>DeepSeek</h3>
                                <label class="switch">
                                    <input type="checkbox" data-model="deepseek">
                                    <span class="slider"></span>
                                </label>
                            </div>
                            <button class="expand-btn" data-model="deepseek">Expand</button>
                        </div>
                        <div class="panel-body">
                            <div class="empty-state">
                                <p>Ready to generate response...</p>
                            </div>
                        </div>
                        <div class="panel-footer">
                            <div class="action-buttons">
                                <button class="action-btn">
                                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <path d="M7 10v12"></path>
                                        <path d="M15 5.88 14 10h5.83a2 2 0 0 1 1.92 2.56l-2.33 8A2 2 0 0 1 17.5 22H4a2 2 0 0 1-2-2v-8a2 2 0 0 1 2-2h2.76a2 2 0 0 0 1.79-1.11L12 2h0a3.13 3.13 0 0 1 3 3.88Z"></path>
                                    </svg>
                                </button>
                                <button class="action-btn">
                                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <path d="M17 14v6m-3-3h6"></path>
                                        <path d="M6 15.45v-3.9a3.3 3.3 0 0 1 5.4-2.53l1.2 1.08"></path>
                                        <path d="M13 20a5 5 0 0 0 5-5V9a5 5 0 0 0-5-5H7a5 5 0 0 0-5 5v6a5 5 0 0 0 5 5z"></path>
                                    </svg>
                                </button>
                                <button class="action-btn">
                                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <path d="M4 12v8a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2v-8"></path>
                                        <polyline points="16,6 12,2 8,6"></polyline>
                                        <line x1="12" y1="2" x2="12" y2="15"></line>
                                    </svg>
                                </button>
                            </div>
                            <span class="status">Ready</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Input Bar -->
            <form action="/user/prompt" method="POST" class="input-container">
                <div class="input-bar">
                    <div class="input-wrapper">
                        <input 
                            type="text" 
                            placeholder="Ask me anything..." 
                            id="promptInput" 
                            name="prompt"
                        >
                        <button class="attachment-btn" type="button">
                            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M21.44 11.05l-9.19 9.19a6 6 0 0 1-8.49-8.49l9.19-9.19a4 4 0 0 1 5.66 5.66L9.64 16.2a2 2 0 0 1-2.83-2.83l8.49-8.49"></path>
                            </svg>
                        </button>
                        <button class="mic-btn" type="button">
                            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M12 2a3 3 0 0 0-3 3v7a3 3 0 0 0 6 0V5a3 3 0 0 0-3-3Z"></path>
                                <path d="M19 10v2a7 7 0 0 1-14 0v-2"></path>
                                <line x1="12" y1="19" x2="12" y2="22"></line>
                            </svg>
                        </button>
                    </div>
                    <button class="send-btn" id="sendBtn" type="submit">
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M4 12v8a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2v-8"></path>
                            <polyline points="16,6 12,2 8,6"></polyline>
                            <line x1="12" y1="2" x2="12" y2="15"></line>
                        </svg>
                    </button>
                </div>
            </form>

        </div>
    </div>

    <script src="/js/script.js"></script>
</body>
</html>
